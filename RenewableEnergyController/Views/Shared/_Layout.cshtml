<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Renewable Energy Controller</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar">
                <div class="sidebar-header">
                    <h4>Exit Strategy - Renewable Energy Controller</h4>
                </div>
                <ul class="nav nav-sidebar">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "EnergyProduction" ? "active" : "")">
                        <a href="@Url.Action("Index", "EnergyProduction")"><i class="fa fa-bolt"></i> Energy Production</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "BatteryStatus" ? "active" : "")">
                        <a href="@Url.Action("Index", "BatteryStatus")"><i class="fa fa-battery-three-quarters"></i> Battery Status</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Alerts" ? "active" : "")">
                        <a href="@Url.Action("Index", "Alerts")"><i class="fa fa-bell"></i> Alerts</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Analytics" ? "active" : "")">
                        <a href="@Url.Action("Index", "Analytics")"><i class="fa fa-bar-chart"></i> Analytics</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "SystemHealth" ? "active" : "")">
                        <a href="@Url.Action("Index", "SystemHealth")"><i class="fa fa-heartbeat"></i> System Health</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active" : "")">
                        <a href="@Url.Action("Index", "Settings")"><i class="fa fa-cog"></i> Settings</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <div class="col-md-10 main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/charts")
    @RenderSection("scripts", required: false)
</body>
</html>